@model IEnumerable<GarageThree.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to Garage 3.0</h1>


@if (TempData["Success"] != null)
{
    <div class="index-options text-center text-success" id="threeSeconds">
        <H1>@TempData["Success"].ToString()</H1>
    </div>
}




<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 md-1">
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <button class="btn btn-primary btn-lg" onclick="window.location.href='/Park/Park'"><h1 class="my-0 font-weight-normal mx-3">Park</h1></button>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title pricing-card-title">1 SEK <small class="text-muted">/ min</small></h4>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Register and Park</li>
                        </ul>
                        <i class="fa fa-car fa-5x"></i>
                    </div>
                </div>
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <button class="btn btn-primary btn-lg" onclick="window.location.href='/Park/Collect'"><h1 class="my-0 font-weight-normal">Collect</h1></button>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Search and Collect your Vehicle</li>
                            <li>(Edit your Vehicle details)</li>
                        </ul>
                        <i class="fa fa-eject fa-5x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4" style="background:red">Super Helpful Helper Table Could Be a Partial View Instead..</div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passengers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passengers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wheels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Unpark" asp-route-id="@item.Id">Unpark</a>
                    <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>

                </td>
            </tr>
        }
    </tbody>
</table>
